= form_for project, :html => { class: "form-horizontal" } do |f|
  .control-group
    %label.control-label
      Project owner
    .controls
      .input-xlarge.uneditable-input
        #{project.owner.email}
  .control-group
    = f.label :name, class: "control-label"
    .controls
      = f.text_field :name
  .control-group
    .controls
      = f.submit class: "btn btn-primary"

