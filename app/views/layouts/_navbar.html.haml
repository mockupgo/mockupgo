.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.brand{:href => "#"} MockupGo
      - if user_signed_in?
        .nav-collapse
          %ul.nav
            %li{class: request.fullpath == dashboard_path ? "active" : ""}
              %a{:href => dashboard_path} Dashboard
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Projects
                %b.caret
              %ul.dropdown-menu
                - if @projects.length > 0
                  - @projects.each do |project|
                    %li
                      = link_to project.name, project
                - else
                  %li= link_to "There are no projects", "#"

          %ul.nav.pull-right
            %li= link_to("(#{current_user.email})", "#")
            %li= link_to('Sign out', destroy_user_session_path, :method => :delete)
